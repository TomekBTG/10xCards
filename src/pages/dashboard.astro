---
import DashboardStatsSection from "@/components/dashboard/DashboardStatsSection";
import NavigationPanel from "@/components/dashboard/NavigationPanel";
import QuizHistoryTable from "@/components/dashboard/QuizHistoryTable";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Dashboard">
  <div class="container mx-auto px-4">
    <h1 class="text-3xl font-bold mb-8 text-white">Dashboard</h1>

    <div class="grid grid-cols-1 gap-8">
      <div>
        <DashboardStatsSection client:load />
      </div>

      <div>
        <QuizHistoryTable client:load />
      </div>

      <div>
        <div class="bg-zinc-900 border border-zinc-800 rounded-lg p-6">
          <NavigationPanel client:load />
        </div>
      </div>
    </div>
  </div>
</Layout>
