---
import Layout from "../layouts/Layout.astro";
import { LoginForm } from "../components/auth/LoginForm";
---

<Layout title="Logowanie">
  <div class="container mx-auto px-4 max-w-md mt-8">
    <div class="bg-zinc-900 border border-zinc-800 rounded-lg p-8 shadow-lg">
      <h1 class="text-2xl font-bold mb-6 text-center text-white">Logowanie</h1>
      <LoginForm client:load />
      
      <div class="mt-6 text-center">
        <p class="text-zinc-400">
          Nie masz jeszcze konta?
          <a href="/register" class="text-blue-500 hover:text-blue-400">
            Zarejestruj się
          </a>
        </p>
        <p class="mt-2 text-zinc-400">
          <a href="/reset-password" class="text-blue-500 hover:text-blue-400">
            Zapomniałeś hasła?
          </a>
        </p>
      </div>
    </div>
  </div>
</Layout>
