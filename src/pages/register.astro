---
import Layout from "../layouts/Layout.astro";
import { RegisterForm } from "@/components/auth/RegisterForm";
---

<Layout title="Rejestracja">
  <div class="container mx-auto px-4 max-w-md mt-8">
    <div class="bg-zinc-900 border border-zinc-800 rounded-lg p-8 shadow-lg">
      <h1 class="text-2xl font-bold mb-6 text-center text-white">Zarejestruj nowe konto</h1>
      <RegisterForm client:load />

      <div class="mt-6 text-center">
        <p class="text-zinc-400">
          Masz już konto?
          <a href="/login" class="text-blue-500 hover:text-blue-400"> Zaloguj się </a>
        </p>
      </div>
    </div>
  </div>
</Layout>
