---
import Layout from "../layouts/Layout.astro";
import QuizApp from "../components/quiz/QuizApp";
---

<Layout title="Quiz - 10xCards">
  <main class="container mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold">Sesja powtórkowa</h1>
      <p class="text-muted-foreground mt-2">Skonfiguruj parametry sesji, a następnie rozpocznij naukę z fiszkami</p>
    </div>
    <QuizApp client:load />
  </main>
</Layout>
