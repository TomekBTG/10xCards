}

const { title } = Astro.props;

// Wykorzystaj stan autoryzacji z middleware z fallbackiem w razie braku wartości
const isLoggedIn = 'isAuthenticated' in Astro.locals 
  ? Astro.locals.isAuthenticated as boolean 
  : false;

